@model IEnumerable<SOE_Calculator_Project.Models.SavedCalculation>
@using System.Linq

@{
    ViewData["Title"] = "Saved Calculations";
    var hasItems = Model?.Any() == true;
}

<h1 class="h4 mb-3">Saved Calculations</h1>

@if (!hasItems)
{
    <div class="alert alert-info">No saved calculations yet.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-sm align-middle">
            <thead>
                <tr>
                    <th>Expression</th>
                    <th>Result</th>
                    <th>Created</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var row in (Model ?? Enumerable.Empty<SOE_Calculator_Project.Models.SavedCalculation>()))
                {
                    <tr>
                        <td>@row.Expression</td>
                        <td>@row.Result</td>
                        <td class="text-end">
                            <a asp-action="EditHistory" asp-route-id="@row.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                            <a asp-action="Delete" asp-route-id="@row.Id" class="btn btn-sm btn-outline-danger ms-1">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

