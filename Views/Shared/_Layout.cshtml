@* Views/Shared/_Layout.cshtml *@
@using Microsoft.AspNetCore.Http
@{
    var username = Context.Session.GetString("username");
    Layout = null; // This file is the top layout itself
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - SOE Calculator</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Calculator" asp-action="Index">Calculator</a>

            <div class="ms-auto d-flex align-items-center gap-2">
                @if (!string.IsNullOrEmpty(username))
                {
                    <span class="me-2 text-white">Signed in as <strong>@username</strong></span>
                    <form asp-action="Logout" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button class="btn btn-outline-danger btn-sm">Logout</button>
                    </form>
                }
                else
                {
                    <a asp-controller="Calculator" asp-action="Login" class="btn btn-outline-light btn-sm">Login</a>
                    <a asp-controller="Calculator" asp-action="Register" class="btn btn-primary btn-sm">Register</a>
                }
            </div>
        </div>
    </nav>

    <main class="container py-4">
        @RenderBody()   @* ← REQUIRED: injects the child view content *@
    </main>

    @RenderSection("Scripts", required: false)

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

<style>
    nav{
        background: linear-gradient(to left, #240036ff, #111a30ff );
    }
</style>
